<Window x:Class="Dorm_and_Meal_Plan.Cost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dorm_and_Meal_Plan"
        mc:Ignorable="d"
        Title="Cost" Height="100" Width="300">
    <Grid>
        <TextBox Name="tbCost" Text="{Binding Cost}" FontSize="23" VerticalContentAlignment="Center" FontWeight="Bold" Background="Wheat" Foreground="Navy"/>
    </Grid>
</Window>
